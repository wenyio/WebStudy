<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- 欢迎页配置，默认index.jsp -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <!-- RMBServlet Begin -->
    <!-- Servlet配置 -->
    <servlet>
        <servlet-name>RMBServlet</servlet-name>
        <servlet-class>cn.mypji.GenericServlet.servlet.RMBServlet</servlet-class>
    </servlet>
    <!-- Servlet映射 -->
    <servlet-mapping>
        <servlet-name>RMBServlet</servlet-name>
        <url-pattern>/rmb</url-pattern>
    </servlet-mapping>
    <!-- Servlet End -->

    <!-- StudentServlet Begin -->
    <!-- Servlet配置 -->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>cn.mypji.GenericServlet.servlet.StudentServlet</servlet-class>
    </servlet>
    <!-- Servlet映射 -->
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <!-- StudentServlet End -->
</web-app>
